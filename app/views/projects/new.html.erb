<%= render partial: "layouts/header" %>

<div class="container-fluid content-wrapper new-project">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= form_for @project, :html => { :multipart => true } do |f| %>
        <%= render 'shared/errors', object: @project %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <%= f.fields_for :clients do |client_field| %>

        <h4>Client</h4>

        <div class="form-group">
          <%= client_field.label :first_name %>
          <%= client_field.text_area :first_name, class: 'form-control' %>
        </div>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
